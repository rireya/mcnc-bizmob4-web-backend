package com.mcnc.bizmob.web.domain.commonCode.dto;

import java.time.LocalDateTime;

import com.fasterxml.jackson.annotation.JsonProperty;
import com.mcnc.sm.hiplus.domain.commonCode.enums.DefineType;

import io.swagger.v3.oas.annotations.media.Schema;
import lombok.AccessLevel;
import lombok.AllArgsConstructor;
import lombok.Builder;
import lombok.Getter;
import lombok.NoArgsConstructor;
import lombok.Setter;

@Getter
@Setter
@NoArgsConstructor(access = AccessLevel.PROTECTED)
@AllArgsConstructor
@Builder
public class PostLocationCommonCodeDto {
	
	@Schema(description = "상위 코드 ID")
	private String parentCodeId;
	
	@Schema(description = " 코드 ID")
	private String codeId;
	
	@Schema(description = " 코드 명")
	private String codeName;
	
	@Schema(description = " 코드 별칭")
	private String codeAlias;
	
	@Schema(description = "입력 필드 활성화 여부")
	private String isFieldEnabled;

	@JsonProperty("isFieldEnabled")
	public Boolean getIsFieldEnabled() {
	    return Boolean.parseBoolean(this.isFieldEnabled);
	}
	
	@Schema(description = "공통코드 활성화 여부(0: 비활성, 1:활성)")
	private String status;
	
	 @Schema(description = "공통코드 정의 타입")
	private DefineType defineType;
		
}
